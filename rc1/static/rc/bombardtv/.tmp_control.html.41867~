        <script>
		
			$('#comment').val('');
			$('#bombard_button').click(function() {
				$('#comment').val('');
			});
			
			function addVideoItems(items, init) {
				$('#videoItemList').html('');
				for (var i = 0; i<items.length; i++) {
					$('#videoItemList').append($('<li><a id="videoItem" value="'+items[i].vid+'"><img src="http://i3.ytimg.com/vi/'+items[i].vid+'/default.jpg" title="'+items[i].title+'"/><h3>'+items[i].title+'</h3><p>'+items[i].viewCount+' views</p></a></li>'));
				}
				if (!init) $('#videoItemList').listview("refresh");
			}
			addVideoItems([{vid:'EvquyiBRHCk', title:'Super Creepy Justin Bieber \'Boyfriend\' Parody', viewCount:'222,055'},{vid:'Z9kB2sTd8UE', title:'Fourth of July outfit ideas!!!', viewCount:'219,540'},{vid:'8cJiBArztwA', title:'"CALL ME MAYBE" CARLY RAE JEPSEN MUSIC VIDEO PARODY', viewCount:'5,616,678'}],true);

			function addCommentItems(items, init) {
				$('#commentItemList').html('');
				for (var i = 0; i<items.length; i++) {
					$('#commentItemList').append($('<li><a id="commentItem" value="'+items[i].cid+'"><h3>'+items[i].title+'</h3></a></li>'));
				}
				if (!init) $('#commentItemList').listview("refresh");
			}
			addCommentItems([{cid:'EvquyiBRHCk', title:'Super Creepy Justin Bieber \'Boyfriend\' Parody'},{cid:'Z9kB2sTd8UE', title:'Fourth of July outfit ideas!!!'}],true);

        </script>
