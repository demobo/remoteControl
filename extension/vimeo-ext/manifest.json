{
   "name": "YouTube Couch Mode",
   "description": "Watch youtube in fullscreen by default. Use your smartphone as a TV Remote on Youtube",
   "page_action":
   {
	  "default_icon": "images/icon_19.png",
      "default_title": "de Mobo",
	  "default_popup": "popup.html"
   },
   "background" : {
    "scripts": ["js/background.js"]
   },
   "content_scripts": [
      {
         "all_frames": false,
         "js": ["js/main.js"],
		 "css": ["css/main.css"],
		 "matches": [ "http://vimeo.com/*", "https://vimeo.com/*", "http://www.youtube.com/*", "https://www.youtube.com/*" ],
         "run_at": "document_end"
      }
   ],
   "web_accessible_resources": [
   		"jquery-1.7.2.min.js"
   ],
   "icons":
   {
   	 "128": "images/icon_128.png",
      "48": "images/icon_48.png",
	  "19": "images/icon_bw_19.png",
      "16": "images/icon_bw_16.png"
   },
   "homepage_url": "http://www.demobo.com",
   "permissions": [
     "http://vimeo.com/*", "https://vimeo.com/*", "http://www.youtube.com/*", "https://www.youtube.com/*"
   ],
   "version": "3.2.3",
   "manifest_version": 2
}
